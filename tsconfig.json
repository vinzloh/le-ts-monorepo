{
  "compilerOptions": {
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@koei/ui": ["packages/ui/src"],
      "@koei/ui/*": ["packages/ui/src/*"]
    },
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2022"
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"]
}
