{
  "compilerOptions": {
    "customConditions": [
      // maps to package.json exports
      "@koei/lib", // index.ts entrypoint
      "@koei/lib-ts", // multiple extensions no-no
      "@koei/lib-tsx" // multiple extensions no-no
    ],
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "target": "ESNext"
  }
}
