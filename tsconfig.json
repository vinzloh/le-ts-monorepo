{
  "compilerOptions": {
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@koei/lib": ["./packages/lib/src"],
      "@koei/lib/*": ["./packages/lib/src/*"]
    },
    "strict": true,
    "target": "ESNext"
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"]
}
